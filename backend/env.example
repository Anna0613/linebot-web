# 基本設定
DEBUG=False
ENVIRONMENT=development
SHOW_DOCS=False
# 日誌設定
LOG_LEVEL=INFO  # DEBUG/INFO/WARNING/ERROR/CRITICAL
# 是否輸出 SQL 查詢（預設關閉，避免大量訊息）
SQL_ECHO=False

# 資料庫連線池設定（可調整以配合 DB 最大連線數）
POOL_SIZE=10
POOL_MAX_OVERFLOW=20
POOL_TIMEOUT=15



# 資料庫設定 - 主庫（寫入）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# 資料庫設定 - 從庫（讀取）
# 啟用讀寫分離功能（預設關閉）
ENABLE_READ_WRITE_SPLITTING=False
# 從庫連線設定（若未設定則使用主庫設定）
# DB_REPLICA_HOST=localhost
DB_REPLICA_PORT=5433
# DB_REPLICA_NAME=your_database_name
# DB_REPLICA_USER=your_database_user
# DB_REPLICA_PASSWORD=your_database_password

# JWT 設定
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=120
JWT_REMEMBER_EXPIRE_MINUTES=10080

# LINE 登入設定
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_REDIRECT_URI=http://localhost:8000/api/v1/auth/line/callback

# Flask 密鑰（向後相容）
FLASK_SECRET_KEY=your-flask-secret-key

# 前端 URL
FRONTEND_URL=http://localhost:8080

# 郵件設定
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# Redis 設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# MinIO 設定
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_CERT_CHECK=True
MINIO_BUCKET_NAME=message-store
MINIO_PUBLIC_URL=http://localhost:9000

# MongoDB 設定
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_DATABASE=linebot_conversations
MONGODB_AUTH_DATABASE=admin
MONGODB_SSL=False

# AI 設定
AI_PROVIDER=groq

# Groq 設定（推薦）
# 取得 API Key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Gemini 設定（向後相容）
# 取得 API Key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# 通用 AI 設定
AI_MAX_HISTORY_MESSAGES=200

# 安全設定
SECRET_KEY=your-secret-key-here

# 額外允許的 CORS 來源（逗號分隔）
EXTRA_ALLOWED_ORIGINS=
